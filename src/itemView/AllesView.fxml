<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="851.0" prefWidth="1398.0" xmlns="http://javafx.com/javafx/1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="itemView.AllesViewController">
   <children>
      <HBox prefHeight="50.0" prefWidth="200.0">
         <children>
            <Button fx:id="btName" mnemonicParsing="false" onAction="#handleButtonDbNameSortierAction" prefHeight="30.0" prefWidth="100.0" text="Name">
               <HBox.margin>
                  <Insets bottom="10.0" left="20.0" top="10.0" />
               </HBox.margin>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="btArt" mnemonicParsing="false" onAction="#handleButtonDbArtSortierAction" prefHeight="30.0" prefWidth="100.0" text="Art">
               <HBox.margin>
                  <Insets bottom="10.0" left="20.0" top="10.0" />
               </HBox.margin>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="btSeltenheit" mnemonicParsing="false" onAction="#handleButtonDbSeltenheitSortierAction" prefHeight="30.0" prefWidth="100.0" text="Seltenheit">
               <HBox.margin>
                  <Insets bottom="10.0" left="20.0" top="10.0" />
               </HBox.margin>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="btWert" mnemonicParsing="false" onAction="#handleButtonDbWertSortierAction" prefHeight="30.0" prefWidth="100.0" text="Wert">
               <HBox.margin>
                  <Insets bottom="10.0" left="20.0" top="10.0" />
               </HBox.margin>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="btReset" mnemonicParsing="false" onAction="#handleButtonResetAction" prefHeight="30.0" prefWidth="80.0" text="Reset">
               <HBox.margin>
                  <Insets bottom="10.0" left="560.0" top="10.0" />
               </HBox.margin>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <TextField fx:id="tfSuche" prefHeight="30.0" prefWidth="200.0" promptText="Item suchen...">
               <HBox.margin>
                  <Insets bottom="10.0" left="20.0" top="10.0" />
               </HBox.margin>
               <font>
                  <Font name="Serif Regular" size="14.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="TEXT" />
               </cursor>
            </TextField>
            <Button fx:id="btSuchen" mnemonicParsing="false" onAction="#handleButtonDbSuchenAction" prefHeight="34.0" prefWidth="34.0" text="🔍">
               <HBox.margin>
                  <Insets bottom="8.0" left="10.0" top="8.0" />
               </HBox.margin>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </HBox>
      <TableView fx:id="tvItems" prefHeight="801.0" prefWidth="1398.0">
        <columns>
          <TableColumn fx:id="tcName" editable="false" prefWidth="174.0" sortable="false" text="Name" />
          <TableColumn fx:id="tcItemArt" editable="false" prefWidth="174.0" sortable="false" text="Art" />
            <TableColumn fx:id="tcSeltenheit" editable="false" prefWidth="174.0" sortable="false" text="Seltenheit" />
            <TableColumn fx:id="tcWert" editable="false" prefWidth="174.0" sortable="false" text="Wert" />
        </columns>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </TableView>
   </children>
</VBox>
