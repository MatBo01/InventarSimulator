<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox prefHeight="900.0" prefWidth="1600.0" xmlns="http://javafx.com/javafx/1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.InventarAnsichtController">
   <children>
      <TabPane prefHeight="900.0" prefWidth="1400.0" style="-fx-border-color: grey;" tabClosingPolicy="UNAVAILABLE" tabMaxHeight="40.0" tabMaxWidth="200.0" tabMinHeight="40.0" tabMinWidth="150.0">
         <tabs>
            <Tab text="Alles">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <VBox prefHeight="200.0" prefWidth="100.0" />
                        <fx:include fx:id="allesView" source="AllesView.fxml" />
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
            <Tab text="Waffen">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <VBox prefHeight="200.0" prefWidth="100.0" />
                        <fx:include fx:id="waffenView" source="WaffenView.fxml" />
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
            <Tab text="Rüstungen">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <VBox prefHeight="200.0" prefWidth="100.0" />
                        <fx:include fx:id="ruestungView" source="RuestungView.fxml" />
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
            <Tab text="Verbrauchsgegenstände">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <VBox prefHeight="200.0" prefWidth="100.0" />
                        <fx:include fx:id="verbrauchsgegenstandView" source="VerbrauchsgegenstandView.fxml" />
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
         </tabs>
         <HBox.margin>
            <Insets />
         </HBox.margin>
      </TabPane>
      <VBox prefHeight="900.0" prefWidth="200.0">
         <children>
            <Button fx:id="btItemAnsicht" mnemonicParsing="false" onAction="#handleButtonItemAnsichtAction" prefHeight="30.0" prefWidth="30.0" text="🔍">
               <VBox.margin>
                  <Insets left="85.0" />
               </VBox.margin></Button>
            <Button fx:id="btItemErstellen" mnemonicParsing="false" onAction="#handleButtonItemErstellenAction" prefHeight="50.0" prefWidth="140.0" text="Item erstellen">
               <VBox.margin>
                  <Insets left="30.0" right="30.0" top="660.0" />
               </VBox.margin>
               <font>
                  <Font name="Serif Bold" size="18.0" />
               </font>
            </Button>
            <Button fx:id="btItemLoeschen" mnemonicParsing="false" onAction="#handleButtonItemLoeschenAction" prefHeight="50.0" prefWidth="140.0" text="Item löschen">
               <VBox.margin>
                  <Insets left="30.0" right="30.0" top="20.0" />
               </VBox.margin>
               <font>
                  <Font name="Serif Bold" size="18.0" />
               </font>
            </Button>
            <Button fx:id="btHauptmenue" mnemonicParsing="false" onAction="#handleButtonHauptmenueAction" prefHeight="50.0" prefWidth="140.0" text="Hauptmenü">
               <VBox.margin>
                  <Insets left="30.0" right="30.0" top="20.0" />
               </VBox.margin>
               <font>
                  <Font name="Serif Bold" size="18.0" />
               </font></Button>
         </children>
      </VBox>
   </children>
</HBox>
